<h3>Tum Bolumler</h3>
<p>
	<%= link_to "New Episode" , new_episode_path %>
</p>

<table border="1" cellspacing="1" cellpadding="3">  
	<tr>
		<th>Id</th>
		<th>Isim</th>
		<th>Video</th>

		<th>Islemler</th>
	</tr>

	<% @episodes.each do |episode| %>
		<tr>
			<td><%= episode.id %></td>
			<td><%= episode.name %></td>
			<td><%= episode.video %></td>
			<td>
				<%= link_to "Detay" , episode_path(episode) %> - 
				<%= link_to "Duzenle" , edit_episode_path(episode) %> - 
				<%=  link_to "Sil",  episode, method: :delete, data: {confirm: 'Emin misiniz?'} %>
			</td>
		</tr>
	<% end %>
</table>