
<%= form_for @program do |f| %>
	
	<p>
		<%= f.label "Isim" %><br />
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label "Kategori Seciniz" %><br/>
		<%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name" , @program.category_id ) %>


	</p>

	
	<p>
		<%= f.submit %>
	</p>

<% end %>